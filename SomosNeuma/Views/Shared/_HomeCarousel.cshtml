@model List<TopFeature>

<div id="carouselExample" class="carousel slide">
    <div class="carousel-inner"> 

        @foreach (var featureWithIndex in Model.Select((feature, index) => new {feature, index}))
        {

            <div class="carousel-item @(featureWithIndex.index == 0 ? "active" : "")">
                <div class="row p-3">

                    <div class="col-md-4 p-0 rounded">
                        <img class="img-fluid" src="@Url.Content(featureWithIndex.feature.Image)" style="height:500px" />
                    </div>

                    <div class="col-md-8 description-square border-4 rounded p-5 mt-2 mt-sm-0">
                        <div class="container d-flex justify-content-center align-items-center" style="height: 100%;">
                            <div class="row text-center justify-content-center">
                                <div class="col-12 bebas-neue-regular">
                                    <h1 class="h1 ">@featureWithIndex.feature.Title</h1>
                                </div>
                                <div class="col-lg-6">
                                    <p class="pHome">
                                        @featureWithIndex.feature.Description
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        }

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
